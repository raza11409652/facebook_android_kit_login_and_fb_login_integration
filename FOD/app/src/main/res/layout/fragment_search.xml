<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_dtl"
        android:orientation="vertical"
        android:padding="@dimen/parent_layout_padding">
        <!--TextView
            android:layout_marginLeft="@dimen/logo_margin_bototm"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/focus"
            android:textColor="@color/white"
            android:textSize="24sp" /-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="160sp"
            android:src="@drawable/logo_fod_final" />
        <EditText
            android:drawableLeft="@drawable/search_primary"
            android:id="@+id/locationBox"
            android:focusable="false"
            android:drawablePadding="6sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_view"
            android:background="@drawable/input_back"
            android:hint="@string/enterLocation" />
    </LinearLayout>


</FrameLayout>