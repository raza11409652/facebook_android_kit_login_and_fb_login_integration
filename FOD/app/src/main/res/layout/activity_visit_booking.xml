<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitBooking">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/parent_layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            android:clipToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="@dimen/parent_layout_padding"
                    android:layout_marginBottom="@dimen/padding_4"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_weight=".75"
                        android:layout_width="0sp"
                        android:layout_height="128sp"
                        android:src="@drawable/image_logo_back"/>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/padding_4"
                        android:orientation="vertical"
                        android:layout_weight="1.25"
                        android:layout_marginTop="@dimen/parent_layout_padding"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/property_name"
                            />
                        <TextView
                            android:text="@string/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/Divider" android:layout_marginTop="@dimen/btn_radius"/>
           <LinearLayout
               android:layout_marginTop="@dimen/margin_top_view"
               android:paddingLeft="@dimen/parent_layout_padding"
               android:paddingRight="@dimen/parent_layout_padding"
               android:orientation="horizontal"
               android:weightSum="3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_weight="1"
                   android:layout_width="0sp"
                   android:layout_height="wrap_content"
                   android:text="@string/visiting_date"
                   />
              <EditText
                  android:background="@drawable/input_back_date_edit"
                  android:id="@+id/dateEdit"
                  android:focusable="false"
                  android:layout_weight="2"
                  android:layout_width="0sp"
                  android:layout_height="wrap_content" />
           </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/margin_top_view"
                    android:layout_marginTop="@dimen/padding_4"
                   android:paddingLeft="@dimen/parent_layout_padding"
                    android:paddingRight="@dimen/parent_layout_padding"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="@string/visiting_time"
                        />
                    <EditText
                        android:background="@drawable/input_back_date_edit"
                        android:id="@+id/timeEdit"
                        android:focusable="false"
                        android:layout_weight="2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/padding_4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/visitNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/btn_padding"
            android:text="@string/book_visit"
            android:theme="@style/PrimaryButton" />
    </LinearLayout>
</RelativeLayout>
