<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertySearch">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/emptyIconwrapper"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/emptyIcon"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty"
            />
        <TextView
            android:textSize="24sp"
            android:layout_marginTop="@dimen/parent_layout_padding"
            android:gravity="center"
            android:layout_below="@+id/emptyIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Result Found"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/propertyHolder"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/parent_layout_padding"
            android:background="@color/themeColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/loc_pin"
                android:drawablePadding="@dimen/padding_4"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:id="@+id/locationText"
                />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/loaderHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_above="@id/progress_circular"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search_for_property" />
        <ProgressBar
            android:layout_marginTop="@dimen/padding_4"
            android:id="@+id/progress_circular"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/progress_location"
            android:layout_marginTop="@dimen/parent_layout_padding"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="@string/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_circular"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>